<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/addertilizers"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"

    tools:context=".AddFertActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/addName"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:hint="Enter fertilizer name"
            android:padding="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/green"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/addFertId"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:hint="Enter fertilizer ID"
            android:padding="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/green"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/addQuantity"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:hint="Enter fertilizer quantity"
            android:padding="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/green"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/addPrice"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Price per Kg"
            android:padding="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/green"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/addDes"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:hint="Description"
            android:padding="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/green"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/addButton"
            android:text="Add"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"/>








    </LinearLayout>

</LinearLayout>
</ScrollView>